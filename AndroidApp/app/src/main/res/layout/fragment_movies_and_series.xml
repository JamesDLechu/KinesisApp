<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="aplicacin.primerapp.shiro.kinesispowersapp.fragments.Movies_and_SeriesFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayoutMoviesAndSeriesFragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:tabTextColor="@android:color/black"
        app:tabSelectedTextColor="@color/colorPrimary"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerMoviesAndSeriesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayoutMoviesAndSeriesFragment"/>

</RelativeLayout>
